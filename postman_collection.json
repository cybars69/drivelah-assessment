{
  "info": {
    "name": "Voucher & Promotion API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Vouchers",
      "item": [
        {
          "name": "Create Voucher",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/vouchers",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"SAVE20\",\n  \"type\": \"percentage\",\n  \"value\": 20,\n  \"expiresAt\": \"2025-12-31T23:59:59Z\",\n  \"usageLimit\": 100,\n  \"minOrderValue\": 50\n}"
            }
          }
        },
        {
          "name": "List Vouchers",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/vouchers"
          }
        },
        {
          "name": "Get Voucher by Code",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/vouchers/SAVE20"
          }
        },
        {
          "name": "Update Voucher",
          "request": {
            "method": "PUT",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/vouchers/{{voucherId}}",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"usageLimit\": 200\n}"
            }
          }
        },
        {
          "name": "Delete Voucher",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/vouchers/{{voucherId}}"
          }
        }
      ]
    },
    {
      "name": "Promotions",
      "item": [
        {
          "name": "Create Promotion",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/promotions",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"ELECTRONICS25\",\n  \"eligibleCategories\": [\"electronics\"],\n  \"type\": \"percentage\",\n  \"value\": 25,\n  \"expiresAt\": \"2025-12-31T23:59:59Z\",\n  \"usageLimit\": 200\n}"
            }
          }
        },
        {
          "name": "List Promotions",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/promotions"
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Apply Discount",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/orders/apply",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"productId\": \"507f1f77bcf86cd799439011\",\n      \"category\": \"electronics\",\n      \"price\": 100,\n      \"qty\": 2\n    }\n  ],\n  \"voucherCode\": \"SAVE20\"\n}"
            }
          }
        },
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/orders",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"productId\": \"507f1f77bcf86cd799439011\",\n      \"category\": \"electronics\",\n      \"price\": 100,\n      \"qty\": 2\n    }\n  ],\n  \"voucherCode\": \"SAVE20\"\n}"
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    }
  ]
}
